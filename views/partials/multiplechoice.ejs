<h3>
    <%= content.question%>
</h3>

<% 
var options = [];
options.push(content.correct_answer);
for(let i = 0; i < content.incorrect_answers.length; i++)
{
    options.push(content.incorrect_answers[i]);
}

function shuffleArray(array) {
    for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
    }
    return array;
}

shuffleArray(options);
%>

<% for(let i = 0; i < options.length; i++) { %>
    <input id="question<%= questionNum %>" name="question<%= questionNum %>" type="radio" value="<%=options[i]%>"><%=options[i]%></input>
<% } %>
